<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- For Bootstrap responsiveness -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="icon" type="image/png" href="<%= image_path 'favicon.png' %>" />

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || data.meta.meta_title || "Germain Loret - Développeur FullStack Ruby on Rails" %></title>
    <meta name="description" content="<%= data.meta.meta_description %>">

    <!-- Facebook Open Graph data -->
    <meta property="og:title" content="<%= current_page.data.title || data.meta.meta_title || "Germain Loret - Développeur FullStack Ruby on Rails" %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://germainloret.com<%= current_page.url %>" />
    <meta property="og:image" content="<%= image_path data.meta.meta_image %>" />
    <meta property="og:description" content="<%= data.meta.meta_description %>" />
    <meta property="og:site_name" content="<%= current_page.data.title || data.meta.meta_title || "Germain Loret - Développeur FullStack Ruby on Rails" %>" />

    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="<%= data.meta.twitter_account %>">
    <meta name="twitter:title" content="<%= current_page.data.title || data.meta.meta_title || "Germain Loret - Développeur FullStack Ruby on Rails" %>">
    <meta name="twitter:description" content="<%= data.meta.meta_description %>">
    <meta name="twitter:creator" content="<%= data.meta.twitter_account %>">
    <meta name="twitter:image:src" content="<%= image_path data.meta.meta_image %>">

    <%= stylesheet_link_tag "all" %>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- Leave those next 4 lines if you care about users using IE8 -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body class="<%= page_classes %>">
    <%= partial "menu" %>
    <div id="inside-container">
      <div id="content">
        <%= yield %>
      </div>
    </div>
    <%= javascript_include_tag  "all" %>
    <% current_page.data.append_js.each do |jsfile|%>
        <%= javascript_include_tag jsfile %>
      <% end if current_page.data.append_js %>
  </body>
</html>
